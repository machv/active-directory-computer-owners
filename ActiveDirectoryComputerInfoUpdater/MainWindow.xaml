<Window x:Class="ActiveDirectoryComputerInfoUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiveDirectoryComputerInfoUpdater"
        xmlns:ViewModel="clr-namespace:ActiveDirectoryComputerInfoUpdater.ViewModel"
        mc:Ignorable="d"
        Title="AD Computers Owners" Height="350" Width="525">

    <Window.DataContext>
        <ViewModel:WindowViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TreeView HorizontalAlignment="Left" ItemsSource="{Binding OrganizationalUnits}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate>
                    <TextBlock Padding="2" />
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>

        <Button Command="{Binding LoadOrganizationalUnitsCommand}" Content="Load OUs" Grid.Column="1" Margin="50" />
        
    </Grid>
</Window>
